{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": "error",
        "quotes": "error",
        "jsx-quotes": [
            "error",
            "prefer-double"
        ]
    },
    "ignorePatterns": [
        "node_modules",
        "dist",
        "lib",
        "build",
        "public",
        "jest.config.js",
        "webpack.config.js",
        "tailwind.config.js",
        "postcss.config.js"
    ]
}
