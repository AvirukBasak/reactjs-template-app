{
  "compilerOptions": {
    "target": "ES5",
    "jsx": "preserve",
    "module": "CommonJS",
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"],
    },
    "types": [
      "./src/types/declarations.d.ts",
      "node",
      "jest",
      "react",
      "react-dom",
      "react-router-dom",
    ],
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/types/declarations.d.ts", "./src/**/*.ts*"],
  "exclude": ["./node_modules/**/*", "./dist/**/*", "./lib/**/*"]
}
